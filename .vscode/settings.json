{
    "files.associations": {
        "*.md": "markdown",
        "**/docs/**/*.md": "markdown"
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },

    "cSpell.words": [
        "sidebarrc"
    ],
    "svg.preview.background": "transparent",
    "json.schemas": [
        {
            "fileMatch": [
                "/docs/.vitepress/config/locale/**/*.json",
                "/docs/.vitepress/config/defaultSnippets.json"
            ],
            "url": "./snippet.schema.json"
        },
        {
            "fileMatch": [
                "/docs/.vitepress/config/bills.json"
            ],
            "url": "./bill.schema.json"
        }
    ]
} 